{% extends 'base.html.twig' %}

{% block title %}Edit Libro{% endblock %}

{% block body %}

    <div class="col-8 offset-2 mt-5">
        <div class="card">
            <div class="card-header">
                <h6 class="float-start pt-1"><i class="fa-solid fa-edit"></i>&nbsp;&nbsp;Editar libro</h6>
                <form method="post" class="float-end" action="{{ path('app_libro_delete', {'id': libro.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ libro.id) }}">
                    <button class="btn btn-sm btn-danger"><i class="fa-solid fa-times"></i>&nbsp;&nbsp;Eliminar</button>
                </form>
            </div>
            <div class="card-body">
                {{ include('libro/_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
